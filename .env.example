# SoftLearn Environment Variables
# Copy this file to .env and fill in your actual values

# Multi-Organization Settings
NEXT_PUBLIC_LEARNHOUSE_MULTI_ORG=false
NEXT_PUBLIC_LEARNHOUSE_DEFAULT_ORG=default

# Backend API Configuration
NEXT_PUBLIC_LEARNHOUSE_API_URL=https://your-backend-api.com/api/v1/
NEXT_PUBLIC_LEARNHOUSE_BACKEND_URL=https://your-backend-api.com/
NEXT_PUBLIC_LEARNHOUSE_MEDIA_URL=https://your-backend-api.com/

# Domain Configuration (will be set automatically by Vercel)
NEXT_PUBLIC_LEARNHOUSE_DOMAIN=your-app.vercel.app
NEXT_PUBLIC_LEARNHOUSE_TOP_DOMAIN=vercel.app
NEXT_PUBLIC_LEARNHOUSE_HTTPS=true

# WebSocket for Collaboration (if using)
NEXT_PUBLIC_LEARNHOUSE_COLLABORATION_WS_URL=wss://your-backend-api.com:1998

# Authentication (NextAuth.js)
NEXTAUTH_URL=https://your-app.vercel.app
NEXTAUTH_SECRET=your-secure-random-secret-here
AUTH_SECRET=your-secure-random-secret-here

# Additional API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-api.com:1338/

# AI/ML Features (if using local Ollama - disable for production)
NEXT_PUBLIC_USE_LOCAL_OLLAMA=false
NEXT_PUBLIC_LOCAL_OLLAMA_URL=
NEXT_PUBLIC_LOCAL_OLLAMA_MODEL=
